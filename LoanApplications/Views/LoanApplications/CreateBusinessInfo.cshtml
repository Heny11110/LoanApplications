 
@model LoanApplications.Web.Models.BusinessInfoModel

@{
    ViewData["Title"] = "CreateBusinessInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Business Information</h1>

<h4>BusinessInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBusinessInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="hide">
                <input asp-for="ApplicantId" class="form-control hide" />
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>

<div class="form-group">
    <a asp-action="CreateApplicant" class="btn btn-primary">Back</a>
    <a asp-action="CreateLoanApplication" class="btn btn-primary">Next</a>
</div>

