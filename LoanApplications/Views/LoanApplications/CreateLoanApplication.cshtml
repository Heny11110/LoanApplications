@model LoanApplications.Web.Models.LoanApplicationModel

@{
    ViewData["Title"] = "CreateLoanApplication";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 

<h4>Loan Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLoanApplication">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanRequested" class="control-label"></label>
                <input asp-for="LoanRequested" class="form-control" />
                <span asp-validation-for="LoanRequested" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonthsToPayback" class="control-label"></label>
                <input asp-for="MonthsToPayback" class="form-control" />
                <span asp-validation-for="MonthsToPayback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="APRRate" class="control-label"></label>
                <input asp-for="APRRate" class="form-control" />
                <span asp-validation-for="APRRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditRating" class="control-label"></label>
                <input asp-for="CreditRating" class="form-control" />
                <span asp-validation-for="CreditRating" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="LateLoanPayments" class="control-label"></label>
                <input asp-for="LateLoanPayments" class="form-control" />
                <span asp-validation-for="LateLoanPayments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalOutstandingDebt" class="control-label"></label>
                <input asp-for="TotalOutstandingDebt" class="form-control" />
                <span asp-validation-for="TotalOutstandingDebt" class="text-danger"></span>
            </div>
             
            <div style="display: none;">
                 
                <input asp-for="ApplicantId" class="form-control hide" />
               
            </div>
            <div class="form-group">
                <a asp-action="EditBusinessInfo" asp-route-businessInfoId="@Model.ApplicantId" class="btn btn-primary">Back</a>
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="form-group">
    
    
</div>

